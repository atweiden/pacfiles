# xft {{{

Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

# end xft }}}

# xterm {{{

XTerm*locale: true
XTerm*borderWidth: 0
XTerm*jumpScroll: false
XTerm*saveLines: 65535
XTerm*titeInhibit: true

# seoul256 by @junegunn
XTerm*color0: #4e4e4e
XTerm*color1: #d68787
XTerm*color2: #5f865f
XTerm*color3: #d8af5f
XTerm*color4: #85add4
XTerm*color5: #d7afaf
XTerm*color6: #87afaf
XTerm*color7: #d0d0d0
XTerm*color8: #626262
XTerm*color9: #d75f87
XTerm*color10: #87af87
XTerm*color11: #ffd787
XTerm*color12: #add4fb
XTerm*color13: #ffafaf
XTerm*color14: #87d7d7
XTerm*color15: #e4e4e4
XTerm*foreground: #d0d0d0
XTerm*background: #121212
XTerm*cursorColor: #d0d0d0
XTerm*cursorColor2: #3a3a3a
XTerm*colorBD: #e4e4e4
XTerm*colorUL: #00afd7

# font
XTerm*faceName: MonoLisa
XTerm*faceSize: 16

# clipboard
XTerm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

# alt bindings
XTerm*metaSendsEscape: true

# console vim fixes
XTerm*fullscreen: never
XTerm.omitTranslation: fullscreen

# end xterm }}}

