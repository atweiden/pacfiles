input type:keyboard {
  xkb_layout "us"

  # use capslock key for backspace, press both shift keys for capslock,
  # press one shift key to cancel capslock
  xkb_options "caps:backspace,shift:both_capslock_cancel"

  # delay in milliseconds
  repeat_delay 420

  # number of repeats per second
  repeat_rate 30
}

# vim: set filetype=swayconfig foldmethod=marker foldlevel=0 nowrap:
